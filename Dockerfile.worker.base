ARG CUDA_BASE=nvidia/cuda:12.9.1-cudnn-devel-ubuntu22.04
FROM ${CUDA_BASE} AS base

ARG DEBIAN_FRONTEND=noninteractive
WORKDIR /app

# Install Python 3.12 and pip
RUN apt-get update && \
    apt-get install -y software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y python3.12 python3.12-venv python3.12-dev curl && \
    curl -sS https://bootstrap.pypa.io/get-pip.py | python3.12 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1 && \
    update-ca-certificates

# ---- Development image ----
FROM base AS dev
RUN --mount=type=cache,target=/root/.cache/pip \
    python3 -m pip install --no-cache-dir "watchdog[watchmedo]"

# ---- Production image ----
FROM base AS prod
# (no extra packages â€“ lean runtime)